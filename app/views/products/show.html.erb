<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= @product.vendors.each do |vendor| %>
<p>
  <strong>Vendor: </strong>
  <tr>
    <td><%= vendor.name %></td>
    <br>
  </tr>
</p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
